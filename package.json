{
  "name": "use-screen",
  "version": "3.0.0",
  "description": "custom react hook for screen and device information",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js"
    }
  },
  "keywords": [
    "screen",
    "use screen",
    "responsive",
    "screen width",
    "hooks",
    "react"
  ],
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:app",
    "build:lib": "tsc && vite build",
    "build:app": "tsc && vite build --config vite.example.config.ts",
    "dev:lib": "vite",
    "preview": "vite preview --config vite.example.config.ts",
    "dev:app": "vite --config vite.example.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest --coverage",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alioguzhan/use-screen.git"
  },
  "author": "Ali Oguzhan Yildiz <aoguzhanyildiz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alioguzhan/use-screen/issues"
  },
  "homepage": "https://github.com/alioguzhan/use-screen#readme",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-ionicons": "^4.2.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
