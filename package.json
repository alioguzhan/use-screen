{
  "name": "use-screen",
  "version": "1.0.1",
  "description": "custom react hook for screen and device information",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "keywords": [
    "screen",
    "use screen",
    "responsive",
    "screen width",
    "hooks",
    "react"
  ],
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest --coverage --watch",
    "test:ci": "cross-env CI=1 jest --coverage",
    "coverage": "codecov -e TRAVIS_NODE_VERSION -f coverage/*.json",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alioguzhan/use-screen.git"
  },
  "author": "Ali Oguzhan Yildiz <aoguzhanyildiz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alioguzhan/use-screen/issues"
  },
  "homepage": "https://github.com/alioguzhan/use-screen#readme",
  "peerDependencies": {
    "react": "16.13.0",
    "react-dom": "16.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-test-renderer": "^16.13.0",
    "rollup": "^2.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.26.0",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
